-- decimal aggregates over a table
CREATE TABLE decimals (
    d1 DECIMAL(4,1),
    d2 DECIMAL(9,1),
    d3 DECIMAL(18,1),
    d4 DECIMAL(38,1),
    ts timestamp time index,
);

