+---------------------------------------------------------------------------------+

SELECT '2021-04-29 10:50:09-05'::TIMESTAMPTZ::TIME;

+---------------------------------------------------------------------------------+
| arrow_cast(Utf8("2021-04-29 10:50:09-05"),Utf8("Timestamp(Millisecond, None)")) |
