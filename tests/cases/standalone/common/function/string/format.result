SELECT FORMAT('Record {id}: {status} user with score {score} on {date}', 
              'id', "id", 
              'status', CASE WHEN is_active THEN 'active' ELSE 'inactive' END,
              'score', score,
              'date', d) 
FROM format_complex ORDER BY ts;

